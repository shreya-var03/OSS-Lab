#include <stdio.h>
#include <string.h>
#include <ctype.h>

#define MAX_WORDS 1000
#define MAX_WORD_LEN 50
#define MAX_PARAGRAPH_LEN 1000

// Function to convert a string to lowercase
void toLowerCase(char *str) {
    while (*str) {
        *str = tolower(*str);
        str++;
    }
}
int main() {
    char paragraph[MAX_PARAGRAPH_LEN];
    char words[MAX_WORDS][MAX_WORD_LEN];
    int freq[MAX_WORDS];
    int wordCount = 0;

    printf("Enter a paragraph:\n");
    fgets(paragraph, MAX_PARAGRAPH_LEN, stdin);

    // Remove newline at end if present
    paragraph[strcspn(paragraph, "\n")] = '\0';

    // Tokenize paragraph by delimiters (space, punctuation)
    const char *delimiters = " ,.-!?\t\n";
    char *token = strtok(paragraph, delimiters);

    while (token != NULL) {
        toLowerCase(token);  // normalize case

        // Check if token is already in words array
        int found = 0;
        for (int i = 0; i < wordCount; i++) {
            if (strcmp(words[i], token) == 0) {
                freq[i]++;
                found = 1;
                break;
            }
        }
        // If not found, add new word
        if (!found && wordCount < MAX_WORDS) {
            strcpy(words[wordCount], token);
            freq[wordCount] = 1;
            wordCount++;
        }

        token = strtok(NULL, delimiters);
    }
    printf("\nWord frequencies:\n");
    for (int i = 0; i < wordCount; i++) {
        printf("%s: %d\n", words[i], freq[i]);
    }

    return 0;
}
